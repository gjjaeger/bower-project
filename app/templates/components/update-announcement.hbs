{{#if updateAnnouncementForm}}
  <h4>Update {{announcement.author}}'s message: {{announcement.content}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=announcement.author}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" placeholder=announcement.content}}
      </div>

      <button {{action 'update' announcement}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateAnnouncementForm'}}>Update</button>
{{/if}}
